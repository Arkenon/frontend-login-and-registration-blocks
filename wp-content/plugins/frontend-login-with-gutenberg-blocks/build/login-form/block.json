{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "frontend-login-with-gutenberg-blocks/login-form",
  "version": "1.0.0",
  "title": "Login Form",
  "category": "theme",
  "icon": "share-alt2",
  "description": "Display login form",
  "attributes": {
    "showLabels": {
      "type": "boolean",
      "default": true
    },
    "showPlaceholders": {
      "type": "boolean",
      "default": false
    },
    "textColor": {
      "type": "string",
      "default": "black"
    },
    "textFontWeight": {
      "type": "string",
      "default": "bold"
    },
    "inputBorderRadius": {
      "type": "number",
      "default": 0
    },
    "buttonBgColor": {
      "type": "string",
      "default": "gray"
    },
    "buttonTextColor": {
      "type": "string",
      "default": "black"
    },
    "buttonBorder": {
      "type": "object",
      "default": {
        "color": "#000",
        "style": "solid",
        "width": "0px"
      }
    },
    "buttonBorderRadius": {
      "type": "number",
      "default": 0
    },
    "buttonTextFontWeight": {
      "type": "string",
      "default": "normal"
    }
  },
  "supports": {
    "html": false
  },
  "textdomain": "login-form",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css"
}